{
  "name": "npm-base",
  "author": "waiting",
  "version": "0.0.1",
  "description": "npm boilerplate",
  "keywords": [
    "种子项目",
    "ESM",
    "typescript",
    "ts"
  ],
  "type": "module",
  "bin": {},
  "main": "dist/index.js",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "bugs": {
    "url": "https://github.com/waitingsong/npm-base/issues"
  },
  "homepage": "https://github.com/waitingsong/npm-base#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/waitingsong/npm-base"
  },
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "17",
    "@commitlint/config-conventional": "17",
    "@rollup/plugin-commonjs": "22",
    "@rollup/plugin-node-resolve": "13",
    "@swc/core": "^1.2.197",
    "@types/mocha": "9",
    "@types/node": "17",
    "@types/rewire": "2",
    "@types/rimraf": "3",
    "@types/yargs": "17",
    "@waiting/eslint-config": "^8.0.2",
    "@waiting/shared-core": "^18.0.0",
    "coveralls": "3",
    "cross-env": "7",
    "eslint": "8",
    "mocha": "10",
    "mocha-lcov-reporter": "1",
    "rewire": "6",
    "rimraf": "3",
    "rollup-plugin-terser": "7",
    "rxjs": "^7.5.0",
    "rxrunscript": "11",
    "ts-node": "^10.8.0",
    "tsconfig-paths": "3",
    "typescript": "^4.7.2",
    "yargs": "17",
    "zx": "6"
  },
  "engines": {
    "node": ">=16.13.0"
  },
  "files": [
    "tsconfig.json",
    "src/**/*.ts",
    "bin/*.js",
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "bp:add": "git remote add bp https://github.com.cnpmjs.org/waitingsong/npm-base",
    "bp:sync": "git fetch --all -v && git pull origin && git merge bp/main -m \"Merge remote-tracking branch 'bp/main'\" ",
    "bp:syncxo": "git fetch --all -v && git pull origin && git merge bp/main -m \"Merge remote-tracking branch 'bp/main'\" -Xours",
    "bootstrap": "npm i --legacy-peer-deps",
    "build": "npm run tsc && npm run rp",
    "clean": "npm run clean:lock & npm run clean:cache & rm -rf dist/* -rf",
    "clean:cache": "rm -rf .eslintcache .vscode/.tsbuildinfo .vscode/.tsbuildinfo.*",
    "clean:lock": "rm package-lock.json -f",
    "cov": "cross-env TS_NODE_PROJECT=test/tsconfig.json c8 mocha --parallel=false",
    "doc": "typedoc src/index.ts src/lib/index.ts src/lib/model.ts",
    "lint": "eslint --fix --cache {src,test}/**/*.ts",
    "lint:nofix": "eslint --cache {src,test}/**/*.ts",
    "postpublish": "git push origin --follow-tags",
    "prepublishOnly": "npm run clean && npm run build",
    "purge": "npm run clean & rm node_modules -rf & rm package-lock.json -f",
    "refresh": "npm i && npm run repo:init && npm run build",
    "release": "standard-version -r",
    "release:first": "standard-version --first-release",
    "repo:init": "sh .githooks/init-repo.sh",
    "rp": "rollup -c rollup.config.js --context this",
    "rp:w": "npm run tsc:w | rollup -wc rollup.config.js",
    "test": "cross-env TS_NODE_PROJECT=test/tsconfig.json mocha",
    "test:browser": "cd .config && npm run browser && cd ..",
    "browser:debug": "cd .config && npm run debug && cd ..",
    "tsc": "tsc -p tsconfig.json",
    "tsc:w": "tsc -p tsconfig.json -w"
  }
}
